---
layout: base.njk
pagination: 
    data: statesInfo
    size: 1
    alias: state
renderData:
    title: "{{ state.name | safe }}"
permalink: "states/{{ state.name | slug }}/"
---

{% set sites = [state.covid19Site, state.covid19SiteSecondary, state.covid19SiteTertiary, state.covid19SiteQuaternary, state.covid19SiteQuinary] %}

<div class="container mx-auto mt-16 mb-16">
    <div class="max-w-3xl px-4 mx-auto">
        <div class="mb-8 text-5xl">{{ state.name }}</div>
        <div class="py-2 mb-8 bg-white">
            <span class="text-sm font-medium text-gray-500">
                Sites
            </span>
            <div>

                {% for site in sites %}
                    {% if site %}
                        <a class="mr-4 text-blue-500" target="_blank" href="{{ site }}">{{ site | urlHost }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="mb-4 text-3xl">Notes</div>
        <div class="leading-loose markdown">{{ state.notes | markdown | safe }}</div>
    </div>
</div>

